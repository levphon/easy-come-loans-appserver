<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.payu.app.modules.mapper.GoodsMapper">
    <resultMap id="BaseResultMap" type="cn.com.payu.app.modules.entity.Goods">
        <!--
          WARNING - @mbg.generated
        -->
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="goods_code" jdbcType="VARCHAR" property="goodsCode"/>
        <result column="goods_type" jdbcType="TINYINT" property="goodsType"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="origin_price" jdbcType="DECIMAL" property="originPrice"/>
        <result column="price" jdbcType="DECIMAL" property="price"/>
        <result column="cost_price" jdbcType="DECIMAL" property="costPrice"/>
        <result column="remark" jdbcType="VARCHAR" property="remark"/>
        <result column="url" jdbcType="VARCHAR" property="url"/>
        <result column="order_num" jdbcType="TINYINT" property="orderNum"/>
        <result column="ref_id" jdbcType="INTEGER" property="refId"/>
        <result column="enable_status" jdbcType="TINYINT" property="enableStatus"/>
        <result column="del_flag" jdbcType="TINYINT" property="delFlag"/>
        <result column="created_date" jdbcType="TIMESTAMP" property="createdDate"/>
        <result column="created_by" jdbcType="INTEGER" property="createdBy"/>
        <result column="updated_date" jdbcType="TIMESTAMP" property="updatedDate"/>
        <result column="updated_by" jdbcType="INTEGER" property="updatedBy"/>
    </resultMap>
    <sql id="Base_Column_List">
        <!--
          WARNING - @mbg.generated
        -->
        id, goods_code, goods_type, name, origin_price, price, cost_price, remark, url, order_num, ref_id,
        enable_status, del_flag, created_date, created_by, updated_date, updated_by
    </sql>

    <select id="selectById" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_goods
        where del_flag = 0
        and id = #{id}
    </select>

    <select id="selectOnShelfById" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_goods
        where del_flag = 0
        and id = #{id}
        and enable_status = 1
    </select>

    <select id="selectByType" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_goods
        where del_flag = 0
        and goods_type = #{type}
        and enable_status = 1
        order by order_num
    </select>

    <select id="selectByOrderId" resultMap="BaseResultMap">
        select tg.*
        from t_goods tg
                 left join t_order_goods tog on tog.goods_id = tg.id
        where tog.del_flag = 0
          and tog.order_id = #{orderId}
    </select>

    <select id="search" resultType="cn.com.payu.app.modules.model.MngGoodsDTO">
        select id,
        name,
        goods_code goodsCode,
        goods_type goodsType,
        origin_price originPrice,
        price,
        cost_price costPrice,
        url,
        remark,
        order_num orderNum,
        enable_status enableStatus,
        created_date
        from t_goods tg
        where tg.del_flag = 0
        <if test="goodsName != null and goodsName != ''">
            and tg.name like CONCAT('%',#{goodsName},'%')
        </if>
        <if test="goodsType != null">
            and tg.goods_type = #{goodsType}
        </if>
        <if test="enableStatus != null">
            and tg.enable_status = #{enableStatus}
        </if>
        order by goods_type,order_num
    </select>

    <select id="countByTypeAndCode" resultType="java.lang.Integer">
        select count(*)
        from t_goods
        where del_flag = 0
          and goods_type = #{type}
          and goods_code = #{code}
    </select>

    <select id="selectByTypeAndCode" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_goods
        where del_flag = 0
        and goods_type = #{type}
        and goods_code = #{code}
    </select>

    <update id="updateEnableStatusById">
        update t_goods
        set enable_status = #{enableStatus}
        where id = #{id}
    </update>
</mapper>