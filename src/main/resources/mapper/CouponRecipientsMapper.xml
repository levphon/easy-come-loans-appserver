<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.payu.app.modules.mapper.CouponRecipientsMapper">
    <resultMap id="BaseResultMap" type="cn.com.payu.app.modules.entity.CouponRecipients">
        <!--
          WARNING - @mbg.generated
        -->
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="user_id" jdbcType="INTEGER" property="userId"/>
        <result column="coupon_id" jdbcType="INTEGER" property="couponId"/>
        <result column="coupon_title" jdbcType="VARCHAR" property="couponTitle"/>
        <result column="used" jdbcType="TINYINT" property="used"/>
        <result column="type" jdbcType="TINYINT" property="type"/>
        <result column="with_sn" jdbcType="VARCHAR" property="withSn"/>
        <result column="used_amount" jdbcType="DECIMAL" property="usedAmount"/>
        <result column="used_quantity" jdbcType="INTEGER" property="usedQuantity"/>
        <result column="used_threshold" jdbcType="TINYINT" property="usedThreshold"/>
        <result column="effective_date" jdbcType="TIMESTAMP" property="effectiveDate"/>
        <result column="expiration_date" jdbcType="TIMESTAMP" property="expirationDate"/>
        <result column="used_flag" jdbcType="TINYINT" property="usedFlag"/>
        <result column="del_flag" jdbcType="TINYINT" property="delFlag"/>
        <result column="created_date" jdbcType="TIMESTAMP" property="createdDate"/>
        <result column="created_by" jdbcType="INTEGER" property="createdBy"/>
        <result column="updated_date" jdbcType="TIMESTAMP" property="updatedDate"/>
        <result column="updated_by" jdbcType="INTEGER" property="updatedBy"/>
    </resultMap>
    <sql id="Base_Column_List">
        <!--
          WARNING - @mbg.generated
        -->
        id, user_id, coupon_id, coupon_title, used, `type`, with_sn, used_amount, used_quantity,
        used_threshold, effective_date, expiration_date, used_flag, del_flag, created_date, created_by, updated_date,
        updated_by
    </sql>

    <select id="selectById" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_coupon_recipients
        where del_flag = 0
        and id = #{id}
    </select>

    <select id="selectByUserId" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_coupon_recipients
        where del_flag = 0
        and user_id = #{userId}
    </select>

    <select id="selectUnusedByUserIdAndCouponId" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_coupon_recipients
        where del_flag = 0
        and used_flag = 0
        and user_id = #{userId}
        and coupon_id = #{couponId}
        limit 1
    </select>

    <select id="selectUnusedByUserId" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_coupon_recipients
        where del_flag = 0
        and used_flag = 0
        and user_id = #{userId}
    </select>

    <select id="selectUnusedByUserIdAndUsed" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_coupon_recipients
        where del_flag = 0
        and used_flag = 0
        and used = #{used}
        and user_id = #{userId}
    </select>

    <update id="updateUsedFlagByIds">
        update t_coupon_recipients
        set used_flag = 1,
        updated_date = sysdate()
        where used_flag in (0)
        and id in
        <foreach collection="ids" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </update>

    <update id="updateUsedFlagByOrderId">
        update t_coupon_recipients tcr ,t_order_coupon toc
        set tcr.used_flag = 1
        where tcr.id = toc.coupon_id
          and toc.order_id = #{orderId}
    </update>

    <update id="closeCoupon">
        update t_coupon_recipients
        set used_flag    = 2,
            updated_date = sysdate()
        where id = #{id}
          and used_flag in (0)
    </update>

</mapper>